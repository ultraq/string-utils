{
	"name": "@ultraq/string-utils",
	"version": "1.1.0",
	"description": "A collection of utilities for JavaScript strings",
	"author": "Emanuel Rabina <emanuelrabina@gmail.com> (http://www.ultraq.net.nz/)",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/ultraq/string-utils.git"
	},
	"keywords": [
		"string",
		"utilities",
		"format",
		"escape",
		"html"
	],
	"main": "string-utils.node.js",
	"module": "string-utils.js",
	"scripts": {
		"lint": "eslint string-utils.js test",
		"test": "npm run lint --silent && nyc mocha --require babel-register",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"build": "rollup --input string-utils.js --format cjs --output string-utils.node.js",
		"prepublish": "npm run build"
	},
	"devDependencies": {
		"babel-plugin-transform-es2015-modules-umd": "^6.24.1",
		"babel-register": "^6.24.1",
		"chai": "^3.5.0",
		"coveralls": "^2.13.1",
		"eslint": "^3.19.0",
		"eslint-config-ultraq": "^1.0.1",
		"mocha": "^3.2.0",
		"nyc": "^10.3.2",
		"rollup": "^0.41.6"
	}
}
