{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"rules": {
		"brace-style": ["error", "stroustrup"],
		"no-unused-vars": ["error", { "args": "none" }],
		"no-var": "error",
		"quotes": ["error", "single", "avoid-escape"],
		"semi": "error",
		"space-before-function-paren": ["error", "never"],
		"valid-jsdoc": ["error", {
			"prefer": {
				"return": "return"
			},
			"requireParamDescription": false,
			"requireReturn": false
		}]
	}
}
